@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    ;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../GalleryManage/Gallery/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: 'ID', name: 'ID', index: 'ID', align: 'left', sortable: true, hidden: true },
                //{ label: '图库编号', name: 'GalleryNumber', index: 'GalleryNumber', align: 'left', sortable: true, width: 100 },
                { label: '图库区域', name: 'AreaCode', index: 'AreaCode', align: 'center', sortable: true, width: 100 },
                { label: '图库名称', name: 'GalleryName', index: 'GalleryName', align: 'left', sortable: true, width: 200 },
                //{ label: '分类ID', name: 'CategoryId', index: 'CategoryId',  align: 'left',sortable: true  },
                { label: '详细', name: 'Reamrk', index: 'Reamrk', align: 'left', sortable: true, width: 500 },
                { label: '创建人', name: 'CreateUserName', CreateUserName: 'Reamrk', align: 'center', sortable: true },
                { label: '创建时间', name: 'CreateTime', index: 'CreateTime', align: 'left', sortable: true, width: 200 },
                { label: '排序码', name: 'SortCode', index: 'SortCode', align: 'center', sortable: true },
                {
                    label: '是否图迷包', name: 'IsPicZip', index: 'IsPicZip', align: 'center', sortable: true, formatter: function (cellvalue, options, row) {
                        if (cellvalue == true) {
                            return "<span class=\"label label-danger\">是</span>";
                        } else {
                            return "<span class=\"label label-default\">否</span>";
                        }
                    }
                },
            ],
            viewrecords: true,
            rowNum: 25,
            rowList: [10, 20, 30, 50, 100],
            pager: "#gridPager",
            sortname: 'AreaCode',
            sortorder: 'asc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.PK).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.PK).setSelection(selectedRowIndex, false);
            }
        });
        $("#btn_Search").click(function () {

            var gname = $("#txt_Keyword").val();
            var queryJson = {
                GalleryName: gname
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });
    }

    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '编辑图库类别',
            url: '/GalleryManage/Gallery/Form',
            width: '600px',
            height: '450px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        //alert(keyValue);
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑图库类别',
                url: '/GalleryManage/Gallery/Form?keyValue=' + keyValue,
                width: '600px',
                height: '450px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../GalleryManage/Gallery/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的图库类别！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
