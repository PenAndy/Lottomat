@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    ;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../LotteryNumberManage/QGFCQLC/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: 'Id', name: 'ID', index: 'ID', width: 100, align: 'left', sortable: true, hidden: true },
                { label: '期数', name: 'Term', index: 'Term', width: 100, align: 'center', sortable: true },
                { label: '开奖号1', name: 'OpenCode1', index: 'OpenCode1', width: 100, align: 'center', sortable: true },
                { label: '开奖号2', name: 'OpenCode2', index: 'OpenCode2', width: 100, align: 'center', sortable: true },
                { label: '开奖号3', name: 'OpenCode3', index: 'OpenCode3', width: 100, align: 'center', sortable: true },
                { label: '开奖号4', name: 'OpenCode4', index: 'OpenCode4', width: 100, align: 'center', sortable: true },
                { label: '开奖号5', name: 'OpenCode5', index: 'OpenCode5', width: 100, align: 'center', sortable: true },
                { label: '开奖号6', name: 'OpenCode6', index: 'OpenCode6', width: 100, align: 'center', sortable: true },
                { label: '开奖号7', name: 'OpenCode7', index: 'OpenCode7', width: 100, align: 'center', sortable: true },
                { label: '开奖号8', name: 'OpenCode8', index: 'OpenCode8', width: 100, align: 'center', sortable: true },
                { label: '开奖时间', name: 'OpenTime', index: 'OpenTime', width: 200, align: 'center', sortable: true },
                { label: '开奖详情', name: 'Detail', index: 'Detail', width: 300, align: 'left', sortable: true },
                {
                    label: '是否校验', name: 'IsChecked', index: 'IsChecked', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == true) {
                            return "<span class=\"label label-danger\">已校验</span>";
                        } else {
                            return "<span class=\"label label-default\">未校验</span>";
                        }
                    }
                },
                {
                    label: '校验是否通过', name: 'IsPassed', index: 'IsPassed', width: 100, align: 'center', sortable: true,
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == true) {
                            return "<span class=\"label label-danger\">通过</span>";
                        } else {
                            return "<span class=\"label label-default\">未通过</span>";
                        }
                    }
                }
            ],
            viewrecords: true,
            rowNum: 25,
            rowList: [10, 20, 30, 50, 100],
            pager: "#gridPager",
            sortname: 'Term',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                Term: $("#txt_Keyword").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加全国彩-七乐彩',
            url: '/LotteryNumberManage/QGFCQLC/Form',
            width: '750px',
            height: '610px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑全国彩-七乐彩',
                url: '/LotteryNumberManage/QGFCQLC/Form?keyValue=' + keyValue,
                width: '750px',
                height: '610px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../LotteryNumberManage/QGFCQLC/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的全国彩-七乐彩！', 0);
        }
    }
    //校验
    function btn_check() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '校验全国彩-七乐彩',
                url: '/LotteryNumberManage/QGFCQLC/Check?keyValue=' + keyValue,
                width: '750px',
                height: '340px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //清除当前彩种缓存
    function btn_removecache() {
        $.AjaxRequest({
            url: Common.GET_REMOVE_CACHE_API_URL("QLC"),
            type: "GET",
            success: function (req) {
                if (req.Status == 200) {
                    dialogAlert("缓存清除成功！", 1);
                } else {
                    dialogAlert("缓存清除失败，错误信息：" + req.Message + "，请尝试再次点击【清除缓存】按钮。", 2);
                }
            }
        });
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
        <div class="btn-group">
            <a id="lr-check" class="btn btn-default" onclick="btn_check()"><i class="fa fa-check"></i>&nbsp;校验</a>
        </div>
        <div class="btn-group">
            <a id="lr-removecache" class="btn btn-default" onclick="btn_removecache()"><i class="fa fa-remove"></i>&nbsp;清除缓存</a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
