@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script>
;
    $(function () {
        InitialPage();
        GetTree();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //layout布局
        $('#layout').layout({
            applyDemoStyles: true,
            onresize: function () {
                $(window).resize()
            }
        });
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 136.5);
                $("#itemTree").setTreeHeight($(window).height() - 52);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载树
    var _Category, _CategoryId;
    function GetTree() {
        var item = {
            height: $(window).height() - 52,
            param: { EnCode: "FC3D|SSQ|PL3|QT|CSTZM|THZM" },
            url: "../../SystemManage/DataItemDetail/GetDataItemTreeJson",
            onnodeclick: function (item) {
                _Category = item.text;
                _CategoryId = item.id;
                $('#btn_Search').trigger("click");
            }
        };
        //初始化
        $("#itemTree").treeview(item);
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../InformationManage/Label/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: 'ID', name: 'ID', index: 'ID', width: 100, align: 'left', sortable: true, hidden: true },
                //{ label: '分类名称', name: 'CategoryId', index: 'CategoryId', width: 150, align: 'left',sortable: true  },
                { label: '标签名称', name: 'LabelName', index: 'LabelName', width: 150, align: 'left', sortable: true },
                { label: '创建人', name: 'CreateUserName', index: 'CreateUserName', width: 100, align: 'left', sortable: true },
                { label: '创建时间', name: 'CreateTime', index: 'CreateTime', width: 200, align: 'left', sortable: true },
                { label: '排序码', name: 'SortCode', index: 'SortCode', width: 100, align: 'left', sortable: true },
                { label: '三要素-Title', name: 'TitleElement', index: 'TitleElement', width: 300, align: 'left', sortable: true },
                { label: '三要素-Description', name: 'DescriptionElement', index: 'DescriptionElement', width: 300, align: 'left', sortable: true },
                { label: '三要素-Keyword', name: 'KeywordElement', index: 'KeywordElement', width: 300, align: 'left', sortable: true },
            ],
            viewrecords: true,
            rowNum: 25,
            rowList: [10, 20, 30, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateTime',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                LabelName: $("#txt_Keyword").val(),
                //TitleElement: $("#txt_Keyword").val(),
                //DescriptionElement: $("#txt_Keyword").val(),
                //KeywordElement: $("#txt_Keyword").val(),
                CategoryId: _CategoryId
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
            }).trigger('reloadGrid');
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加标签',
            url: '/InformationManage/Label/Form',
            width: '650px',
            height: '500px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑标签',
                url: '/InformationManage/Label/Form?keyValue=' + keyValue,
                width: '650px',
                height: '500px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../InformationManage/Label/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的标签！', 0);
        }
    }
</script>
