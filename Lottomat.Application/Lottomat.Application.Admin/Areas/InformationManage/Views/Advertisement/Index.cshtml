@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../InformationManage/Advertisement/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '广告ID', name: 'ID', index: 'ID', width: 100, align: 'left',sortable: true ,hidden: true },
                { label: '广告名称', name: 'Title', index: 'Title', width: 100, align: 'left',sortable: true  },
                { label: '分类', name: 'Category', index: 'Category', width: 100, align: 'left',sortable: true  },
                { label: '分类ID', name: 'CategoryId', index: 'CategoryId', width: 100, align: 'left',sortable: true  },
                { label: '位置，PC端为4X8，移动端为2X3', name: 'Position', index: 'Position', width: 100, align: 'left',sortable: true  },
                { label: '链接地址', name: 'Href', index: 'Href', width: 100, align: 'left',sortable: true  },
                { label: '添加时间', name: 'AddTime', index: 'AddTime', width: 100, align: 'left',sortable: true  },
                { label: '有效期', name: 'TermOfValidity', index: 'TermOfValidity', width: 100, align: 'left',sortable: true  },
                { label: '备注', name: 'Remark', index: 'Remark', width: 100, align: 'left',sortable: true  },
                { label: '是否启用', name: 'IsEnable', index: 'IsEnable', width: 100, align: 'left',sortable: true  },
            ],
            viewrecords: true,
            rowNum: 25,
            rowList: [10, 20, 30, 50, 100],
            pager: "#gridPager",
            sortname: '',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: true,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
        
        //查询事件
        $('#btn_Search').click(function () {
            var queryJson = {
                    Term: $('#txt_Keyword').val()
                }
                $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson)},
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event){
            if (event.keyCode == '13') {
                $('#btn_Search').trigger('click');
            }
        });    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加广告管理',
            url: '/InformationManage/Advertisement/Form',
            width: '600px',
            height: '600px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑广告管理',
                url: '/InformationManage/Advertisement/Form?keyValue=' + keyValue,
                width: '600px',
                height: '600px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('ID');
        if (keyValue) {
            $.RemoveForm({
                url: '../../InformationManage/Advertisement/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的广告管理！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
